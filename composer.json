{
    "name": "c1/c1-adaptive-images",
    "description": "Adaptive images for fluid_styled_content.",
    "type": "typo3-cms-extension",
    "homepage": "https://github.com/mmunz/c1_adaptive_images",
    "license": "GPL-3.0-or-later",
    "authors": [
        {
            "name": "Manuel Munz",
            "email": "t3dev@comuno.net",
            "homepage": "https://www.comuno.net/",
            "role": "Developer"
        }
    ],
    "support": {
        "issues": "https://github.com/mmunz/c1_adaptive_images/issues",
        "source": "https://github.com/mmunz/c1_adaptive_images"
    },
    "config": {
        "preferred-install": {
            "*": "dist"
        },
        "vendor-dir": "Build/vendor"
    },
    "scripts": {
        "ci:php:lint": "Build/vendor/bin/php-cs-fixer fix --diff --dry-run --config .php_cs",
        "ci:php:fix": "Build/vendor/bin/php-cs-fixer fix --diff --config .php_cs",
        "ci:ts:lint": "typoscript-lint -c Configuration/TsLint.yml --ansi -n --fail-on-warnings -vvv Configuration/TypoScript/",
        "ci:tests:unit": "php Build/vendor/bin/phpunit -c Tests/UnitTests.xml",
        "ci:tests:functional": "php Build/vendor/bin/phpunit -c Tests/FunctionalTests.xml",
        "ci:cache:flush": "rm -rf Build/web/typo3temp/; rm -rf ./var",
        "ci:tests": [
            "@ci:tests:unit",
            "@ci:tests:functional"
        ],
        "ci:dynamic": [
            "@ci:tests"
        ],
        "ci:static": [
            "@ci:php:lint",
            "@ci:ts:lint"
        ],
        "ci": [
            "@ci:static"
        ],
        "link-extension": [
            "@php -r 'is_dir($extFolder=__DIR__.\"/Build/web/typo3conf/ext/\") || mkdir($extFolder, 0777, true);'",
            "@php -r 'file_exists($extFolder=__DIR__.\"/Build/web/typo3conf/ext/c1_adaptive_images\") || symlink(__DIR__,$extFolder);'"
        ],
        "post-autoload-dump": [
            "@link-extension"
        ]
    },
    "extra": {
        "typo3/cms": {
            "cms-package-dir": "{$vendor-dir}/typo3/cms",
            "extension-key": "c1_adaptive_images",
            "web-dir": "Build/web"
        }
    },
    "require": {
        "php": "~7.1.0 || ~7.2.0",
        "typo3/cms-core": "^8.7.10 || ^9.5.0",
        "typo3/cms-fluid": "^8.7.10 || ^9.5.0",
        "typo3/cms-frontend": "^8.7.10 || ^9.5.0",
        "typo3/cms-fluid-styled-content": "^8.7.10 || ^9.5.0"
    },
    "minimum-stability": "dev",
    "prefer-stable": true,
    "require-dev": {
        "nimut/testing-framework": "^4.0",
        "typo3fluid/fluid": "^2.5.0",
        "helhum/typo3-composer-setup": "^0.5.3",
        "helmich/typo3-typoscript-lint": "^1.4.4",
        "friendsofphp/php-cs-fixer": "^2.13",
        "roave/security-advisories": "dev-master"
    },
    "autoload": {
        "psr-4": {
            "C1\\AdaptiveImages\\": "Classes/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "C1\\AdaptiveImages\\Tests\\" : "Tests/"
        }
    }
}
